<%= form_for([@lecture, @lecture.comments.build]) do |f| %>
  <div class="field">
    글쓴이<br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    수업평가<br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    난이도<br />
    <%= f.range_field :hard , :in => 1..5, :step => '1'%>
  </div>
  <div class="field">
    학점만족도<br />
    <%= f.range_field :gpa , :in => 1..5, :step => '1'%>
  </div>
  <div class="field">
    평점<br />
    <%= f.range_field :score , :in => 1..5, :step => '1'%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
